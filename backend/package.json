    "aedes-server-factory": "^0.2.1",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "mqtt": "^5.14.1",
    "prisma": "^5.22.0",
    "socket-io": "^1.0.0",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/mqtt": "^0.0.34",
    "@types/node": "^25.2.0",
